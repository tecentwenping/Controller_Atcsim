{
    background-color: rgb(8,115,169);
	color: rgb(242, 243, 0);
	font: 86 14pt "Segoe UI";
}
LightCollectionButtonWnd QLabel
{
    background-color: rgb(8,115,169);
	color: rgb(242, 243, 0);
	font: 86 14pt "Segoe UI";
}