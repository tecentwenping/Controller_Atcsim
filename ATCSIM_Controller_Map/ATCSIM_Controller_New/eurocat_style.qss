/*
	font style
*/

/* all class UserWnd and it's subclass such as TopWnd */
#CenterWnd
{
	background-color: rgb(160, 170, 170);
}

/* TopWnd's all QLabel */
/* QWidget#TopWnd */
QLabel
{
	color: rgb(96, 0, 0);
	font: 75 10pt "Courier New";
}

QPushButton, QLineEdit, QListView
{
	color: rgb(0, 0, 96);
	font: 75 10pt "Courier New";
}


QHeaderView::section {
    font: 75 9pt "Courier New";
    padding-left: 4px;
    border: 1px solid #6c6c6c;
}


/* TopWnd's QLineEdit */
/* QWidget#TopWnd */
QLineEdit, QTextEdit
{
	background-color: rgb(160, 170, 170);
	color: rgb(0, 0, 96);
	border: 2px solid;
	border-top-color: rgb(113, 111, 100);
	border-left-color: rgb(113, 111, 100);
	border-bottom-color: rgb(255, 255, 255);
	border-right-color: rgb(255, 255, 255);
}

/* TopWnd's & BottomWnd's all QPushButton */
/* QWidget#BottomWnd, QWidget#TopWnd */
QPushButton
{
	color: rgb(0, 0, 96);
	background-color: rgb(160, 170, 170);
	border: 1px solid;
	border-top-color: rgb(255, 255, 255);
	border-left-color: rgb(255, 255, 255);
	border-bottom-color: rgb(113, 111, 100);
	border-right-color: rgb(113, 111, 100);
	font: bold;
}

QPushButton:open
{
	color: rgb(160, 170, 170);
	background-color: rgb(0, 0, 96);
	border: 1px solid;
	border-bottom-color: rgb(255, 255, 255);
	border-right-color: rgb(255, 255, 255);
	border-top-color: rgb(113, 111, 100);
	border-left-color: rgb(113, 111, 100);
	font: bold;
}

QPushButton:closed
{
	color: rgb(0, 0, 96);
	background-color: rgb(160, 170, 170);
	border: 1px solid;
	border-top-color: rgb(255, 255, 255);
	border-left-color: rgb(255, 255, 255);
	border-bottom-color: rgb(113, 111, 100);
	border-right-color: rgb(113, 111, 100);
	font: bold;
}

QPushButton:disabled
{
	color: rgb(100, 100, 130);
	background-color: rgb(160, 170, 170);
	border: 1px solid;
	border-top-color: rgb(255, 255, 255);
	border-left-color: rgb(255, 255, 255);
	border-bottom-color: rgb(113, 111, 100);
	border-right-color: rgb(113, 111, 100);
	font: bold;
}

